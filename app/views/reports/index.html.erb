<div class="page-section flexbox vertical stretch"> 
  <div class="section-inner flexbox vertical stretch"> 
    <div class="section-title flexbox horizontal center">
      <h2>User Reports!</h2>
    <%if Current.user.admin%>
    </div> 
        <table>
          <tr>
              <h3><th>Description </th> </h3>            
          </tr>
          <% @reports.each do |report| %>
            <tr>
              <p><td><%= report.description%></td></p>        
            </tr>
          <% end %>
        </table>
    </div> 
    <%else%>
      You don't have the right to view this.
      <a class="toggle" href="<%= root_path %>">&emsp; Return to Homepage</a>
    <%end%>
</div>
