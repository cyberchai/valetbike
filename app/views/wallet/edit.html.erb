<h1>Edit Wallet Point</h1>

<%= form_with url: edit_wallet_path do |form| %>
    <% if Current.user.errors.any? %>
        <div class="alert alert-danger">
            <% Current.user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div class="mb-3" >
        <%= form.label :coupon, "Enter Coupon Code:" %>
        <%= form.text_field :coupon, class: "form-control"%>
    </div>


    <div class="mb-3">
        <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>

<% end %>
