<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Station locs</h1>
    <%= link_to 'New station loc', new_station_loc_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= js_map locations_path(format: :json),
      width: 800px, height: 800px,
      controls: true,
      tooltips: {hover: false, html: true} %>

  <%= form_with url: locations_path, method: :get do |form| %>
    <%= form.text_field :place, value: params[:place] %>
    <%= form.select :distance, [5,50] %>
    <%= form.submit %>
  <% end %>

  <div id="station_locs" class="min-w-full">
    <%= render @station_locs %>
  </div>

  
</div>
